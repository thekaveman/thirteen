{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "serve",
      "type": "shell",
      "command": "python3 -m http.server",
      "isBackground": true,
      "problemMatcher": {
        "owner": "http-server",
        "pattern": {
          "regexp": ".*"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Serving HTTP on"
        }
      }
    }
  ]
}
