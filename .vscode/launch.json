{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start app",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug npm test",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["test"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug in browser",
      "url": "http://localhost:8888",
      "webRoot": "${workspaceFolder}/src"
    }
  ]
}
