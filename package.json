{
  "name": "thirteen",
  "version": "2025.10.1",
  "description": "A web-based implementation of the card game Thirteen (Tiến Lên), built with vanilla JavaScript, HTML, and CSS.",
  "main": "src/app.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "nyc mocha --require @babel/register --require ./tests/setup.js tests/test_*.js tests/**/test_*.js",
    "start": "live-server --port=8888"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/app/**/*.js"
    ],
    "exclude": [
      "tests"
    ],
    "reporter": [
      "text",
      "html"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thekaveman/thirteen.git"
  },
  "keywords": [],
  "author": "thekaveman",
  "license": "Apache-2.0",
  "type": "module",
  "bugs": {
    "url": "https://github.com/thekaveman/thirteen/issues"
  },
  "homepage": "https://thekaveman.github.io/thirteen/src/",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/register": "^7.28.3",
    "chai": "^6.2.0",
    "jsdom": "^27.0.0",
    "live-server": "^1.2.0",
    "mocha": "^11.7.4",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0"
  }
}
